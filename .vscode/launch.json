{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Current Python File", // 名字可以随便取
      "type": "python",
      "request": "launch",
      "program": "${file}", // 关键：${file} 表示当前打开的文件
      "console": "integratedTerminal",
      "justMyCode": true,
      // 核心关键：设置工作目录为项目根目录！
      "cwd": "${workspaceFolder}"
    }
  ]
}
